<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/piepr_vesture_row_tv_kolonna_datums"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:text="Datums"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/piepr_vesture_row_tv_kolonna_pieprasijums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="3dp" />

    <TextView
        android:id="@+id/piepr_vesture_row_tv_kolonna_pieprasijums"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:text="Piepr"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/piepr_vesture_row_tv_kolonna_prognoze"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/piepr_vesture_row_tv_kolonna_prognoze"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:text="Progn"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/piepr_vesture_row_tv_kolonna_darbadiena"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/piepr_vesture_row_tv_kolonna_darbadiena"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:text="Darbad"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="3dp" />

</android.support.constraint.ConstraintLayout>